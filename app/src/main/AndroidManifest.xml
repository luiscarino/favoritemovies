<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucarino.whattowatch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".movies.MoviesActivity"
            android:label="@string/title_activity_main_discovery" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".moviedetail.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".movies.MoviesActivity">
        </activity>
        
        <provider
            android:authorities="com.example.lucarino.whattowatch"
            android:name=".util.FavMoviesProvider" />
    </application>

</manifest>
